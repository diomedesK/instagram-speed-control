{
    "manifest_version": 3,
    "name": "Instagram Speed Control",
    "author": "Diomedes",
    "description": "Playback and speed adjustments for Instagram front-end",
    "version": "1.0.0",

    "host_permissions":[
    ],

    "web_accessible_resources": [
        {
            "resources": [ "styles/style.css" ],
            "matches": [ "*://*.instagram.com/*" ]
        }
    ],
    
    "permissions": ["scripting", "storage" ],

    "content_scripts": [
      {
        "matches":[
            "*://*.instagram.com/*"
        ],
        "js":["./videoControls.js"],
        "run_at": "document_idle",
        "css": ["/styles/style.css"]
      }
    ],

    
    "icons":{
        "128":"resources/icons/instagram_logo.png"
    },

    "action": {
      "default_icon": {
	    "128":"./resources/icons/instagram_logo.png"
      },
      "default_title": "Video Controls for IG"
    }

  }
